package 第三周;



class Solution{
 
      public int add(int A, int B)
      {
         if(A == 0)
              return B;
         else if(B == 0)
              return A;
         else
              return add(A^B, (A&B)<<1);
      }

	




public static void main(String[] args){
	Solution test=new Solution();
	System.out.println(test.add(1,2));
}}
