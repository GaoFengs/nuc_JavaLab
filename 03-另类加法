import java.util.*;

public class UnusualAdd {
    public int addAB(int A, int B) {
         if(A == 0)
              return B;
         else if(B == 0)
              return A;
         else
              return addAB(A^B, (A&B)<<1);
        
    }
public static void main(String[] args){
	UnusualAdd t=new UnusualAdd();
    System.out.println(t.addAB(1,2));
}
}
